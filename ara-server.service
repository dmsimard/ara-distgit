[unit]
Description=ara-server
Documentation=https://github.com/openstack/ara
After=network.target

[Service]
Type=simple
TimeoutStartSec=0
Restart=on-failure
RestartSec=10
RemainAfterExit=yes
Environment=ANSIBLE_CONFIG=/etc/ara/ara.cfg
ExecStart=/usr/bin/ara-manage runserver

[Install]
WantedBy=multi-user.target
